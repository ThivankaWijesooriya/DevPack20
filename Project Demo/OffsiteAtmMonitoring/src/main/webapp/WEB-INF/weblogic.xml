<?xml version="1.0" encoding="UTF-8"?>
<weblogic-web-app>

	<context-root>OffsiteAtmMonitoring</context-root>

	<!-- if Servlet api (javax.servlet) is less than 3 explicitly enable container 
		initializer -->

	<!-- currently using Servlet version 2.5 -->
	<container-descriptor>
		<container-initializer-enabled>true</container-initializer-enabled>
		<prefer-application-packages>
			<package-name>com.fasterxml</package-name>
			<package-name>org.springframework.*</package-name>
		</prefer-application-packages>
	</container-descriptor>
	

</weblogic-web-app>